@model List<CampanhaBD.Model.BancoModel>

@{
    ViewBag.Title = "Bancos";
}

<h2>Bancos</h2>

<p>
    @Html.ActionLink("Novo Banco", "Criar")
</p>
<table class="table">
    <tr>
        <th>
            Codigo
        </th>
        <th>
            Nome
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new {  codigo = item.Codigo  }) |
            @Html.ActionLink("Excluir", "Excluir", new { codigo = item.Codigo })
        </td>
    </tr>
}

</table>
